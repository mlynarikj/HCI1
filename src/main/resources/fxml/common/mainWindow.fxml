<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<BorderPane prefHeight="700" prefWidth="700" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2"
            fx:controller="clinic.common.MainWindowController">
    <center>
        <Label text="%clinic.intro">
            <font>
                <Font name="System Bold" size="20.0"/>
            </font>
        </Label>
    </center>
    <top>
        <ToolBar>
            <items>
                <Button fx:id="patients" mnemonicParsing="false" onMouseClicked="#patients" text="Patients"/>
                <Button id="doctor" fx:id="doctors" mnemonicParsing="false" onMouseClicked="#doctors" text="Doctors"/>
                <Button fx:id="appointments" mnemonicParsing="false" onMouseClicked="#appointments"
                        text="Appointments"/>
            </items>
        </ToolBar>
    </top>
</BorderPane>
