<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<BorderPane prefHeight="700" prefWidth="700" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2"
            fx:controller="clinic.common.MainWindowController" styleClass="panel, panel-primary">
    <center>
        <Label text="%clinic.intro" styleClass="h1"/>
    </center>
    <top>
        <ToolBar prefWidth="600.0" styleClass="panel-heading">
            <Button styleClass="btn-success" mnemonicParsing="false" onMouseClicked="#patients" text="%patients"/>
            <Button styleClass="btn-success" mnemonicParsing="false" onMouseClicked="#doctors" text="%doctors"/>
            <Button styleClass="btn-success" mnemonicParsing="false" onMouseClicked="#appointments" text="%appointments"/>
        </ToolBar>
    </top>
</BorderPane>
